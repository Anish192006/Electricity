#include <stdio.h>

int main() {
    float units, amount, totalAmount, surcharge;

    // Input the units consumed
    printf("Enter electricity units consumed: ");
    scanf("%f", &units);

    // Calculate base amount based on units
    if (units <= 50) {
        amount = units * 0.50;
    } else if (units <= 150) {
        amount = 50 * 0.50 + (units - 50) * 0.75;
    } else if (units <= 250) {
        amount = 50 * 0.50 + 100 * 0.75 + (units - 150) * 1.20;
    } else {
        amount = 50 * 0.50 + 100 * 0.75 + 100 * 1.20 + (units - 250) * 1.50;
    }

    // Calculate surcharge
    surcharge = amount * 0.20;
    totalAmount = amount + surcharge;

    // Print total bill
    printf("Electricity Bill = â‚¹%.2f\n", totalAmount);

    return 0;
}
